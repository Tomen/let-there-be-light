{
  "name": "let-there-be-light",
  "version": "1.0.0",
  "description": "Graph-based lighting control system",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @let-there-be-light/server dev",
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @let-there-be-light/shared build",
    "build:server": "pnpm --filter @let-there-be-light/server build",
    "ping": "pnpm --filter @let-there-be-light/tools ping",
    "sniff": "pnpm --filter @let-there-be-light/tools sniff",
    "discover": "pnpm --filter @let-there-be-light/tools discover",
    "channel": "pnpm --filter @let-there-be-light/tools channel",
    "control": "pnpm --filter @let-there-be-light/tools control",
    "fixture": "pnpm --filter @let-there-be-light/tools fixture",
    "flash": "pnpm --filter @let-there-be-light/tools flash",
    "chase": "pnpm --filter @let-there-be-light/tools chase",
    "generate": "pnpm --filter @let-there-be-light/tools generate",
    "mcp": "pnpm --filter @let-there-be-light/mcp mcp",
    "gma2:shows": "pnpm --filter @let-there-be-light/gma2-parser shows",
    "gma2:extract": "pnpm --filter @let-there-be-light/gma2-parser extract",
    "gma2:inspect": "pnpm --filter @let-there-be-light/gma2-parser inspect",
    "gma2:dump": "pnpm --filter @let-there-be-light/gma2-parser dump"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
