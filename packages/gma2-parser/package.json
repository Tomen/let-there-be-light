{
  "name": "@let-there-be-light/gma2-parser",
  "version": "1.0.0",
  "description": "GrandMA2 show file parser for Let There Be Light",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
